.container{
  padding-top: 20rpx;
}
.main{
  margin-top: 160rpx;
}
.owner-msg,.payment-msg{
  background-color: #fff;
  padding: 30rpx 20rpx 0 20rpx;
  margin-bottom: 20rpx;
}
.owner-msg-title{
  display: flex;
}
.owner-msg-title-left{
  flex: 1;
}
.owner-msg-title-right{
  flex: 1;
  text-align: right;
  color: #7F3E2F;
}
.payment-item{
  display: flex;
  /* overflow: hidden; */
  border-bottom: 1rpx solid #8D8D8D;
  padding: 30rpx 0;
  line-height: 56rpx;
}
.item-left{
  flex: 1;
  /* float: left; */
  color: #8D8D8D;
}
.item-right{
  flex: 2;
  text-align: left;
  color: #474747;
  display: flex;
  /* float: right;
  text-align: left; */
}
.item-right text{
  flex: 1;
}
.item-right text.icon-riqi{
  text-align: right;
}
.payment-msg-title{
  color: #7F3E2F;
}
.payment-item-left{
  flex: 1;
}
.payment-main .payment-item{
  border:none
}
.payment-item-right{
  flex: 1;
  text-align: right;
}
.payment-item-right .margin-right{
  font-weight: 500;
}
.payment-item-right .icon-gengduo{
  color: #8D8D8D;
}